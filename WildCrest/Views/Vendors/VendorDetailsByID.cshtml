@model WildCrest.Models.WildCrestModels.Vendors

<body class="fix-header card-no-border">

    <div id="main-wrapper">
       
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-block">
                            <a href="/Vendors/Index" style="margin-bottom:20px;" class="btn btn-primary">Go Back</a>
                            <h4 class="card-title">Vendor Details</h4>
                            <div class="form p-t-20">
                                <div class="form-group">
                                    <label style="font-size:large;">First Name :</label>
                                    <div class="input-group">
                                        <div class="input-group-addon"><i class="ti-user" style="width: 20px;font-size:initial"></i></div>
                                        <input type="text" readonly value="@Model.Vendor_First_Name" id="FName" class="form-control" placeholder="First Name" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label style="font-size:large;">Last Name :</label>
                                    <div class="input-group">
                                        <div class="input-group-addon"><i class="ti-user" style="width: 20px;font-size:initial"></i></div>
                                        <input type="text" readonly id="LName" value="@Model.Vendor_Last_Name" class="form-control" placeholder="Last Name" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label style="font-size:large;">Address :</label>
                                    <div class="input-group">
                                        <div class="input-group-addon"><i class="fa fa-address-card-o" aria-hidden="true" style="width: 20px;font-size:initial"></i></div>
                                        <textarea id="address"  readonly class="form-control" placeholder="Address">@Model.Address</textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label style="font-size:large;">Email :</label>
                                    <div class="input-group">
                                        <div class="input-group-addon"><i class="ti-email" style="width: 20px;font-size:initial"></i></div>
                                        <input type="email" readonly value="@Model.EmailID" id="email" class="form-control" placeholder="Email" />
                                    </div>
                                    <div id="errorMessage" style="color:red;"></div>
                                </div>

                                <div class="form-group">
                                    <label style="font-size:large;">Contact No. :</label>
                                    <div class="input-group">
                                        <div class="input-group-addon"><i class="fa fa-phone" aria-hidden="true" style="width: 20px;font-size:initial"></i></div>
                                        <input type="text" readonly value="@Model.Contact_No" id="phone" class="form-control" placeholder="Phone No" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label style="font-size:large;">City :</label>
                                    <div class="input-group">
                                        <div class="input-group-addon"><i class="fa fa-map-marker" aria-hidden="true" style="width: 20px;font-size:initial"></i></div>
                                        <input type="text" readonly value="@Model.City" id="city" class="form-control" placeholder="City" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label style="font-size:large;">State :</label>
                                    <div class="input-group">
                                        <div class="input-group-addon"><i class="fa fa-map-marker" aria-hidden="true" style="width: 20px;font-size:initial"></i></div>
                                        <input type="text" readonly value="@Model.State" id="state" class="form-control" placeholder="State" />
                                    </div>
                                </div>
                                @if (Request.Cookies["PageSetting"] != null)
                                {
                                    if (Request.Cookies["PageSetting"]["VendorsPermission"] != "View")
                                    {
                                        @Html.ActionLink("Edit", "EditVendorByID", "Vendors", new { id = Model.ID }, new { @class = "btn btn-primary" })
                                    }
                                }
                                else
                                {
                                    @Html.ActionLink("Edit", "EditVendorByID", "Vendors", new { id = Model.ID }, new { @class = "btn btn-primary" })
                                }
                            </div>
                        </div>
                    </div>
                </div>

            </div>
       

    </div>
</body>