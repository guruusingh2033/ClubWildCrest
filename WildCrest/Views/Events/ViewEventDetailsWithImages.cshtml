@model WildCrest.Models.WildCrestModels.Event

<style>
    div.gallery {
        margin: 5px;
        border: 1px solid #ccc;
        float: left;
        width: 180px;
    }

        div.gallery:hover {
            border: 1px solid #777;
        }

        div.gallery img {
            width: 100%;
            height: 200px;
        }
</style>

<div class="container">
    <div class="row" style="margin-bottom:20px;">
        <a href="/EventsToUsers/Index" style="font-size:20px;">Go Back</a>
    </div>
    <div class="row">
        <table>
            <tr>
                <td><label>Event Name :</label></td>
                <td>@Model.EventName</td>
            </tr>
            <tr>
                <td><label>Event Date :</label></td>
                <td>
                    @Model.EventDate
                </td>
            </tr>
            <tr>
                <td><label>Event Time :</label></td>
                <td>@Model.EventTime</td>
            </tr>
            <tr>
                <td><label>Event Place :</label></td>
                <td>@Model.Place</td>
            </tr>
            <tr>
                <td><label>Event Organised By :</label></td>
                <td>@Model.OrganisedBy</td>
            </tr>
            <tr>
                <td><label>Description :</label></td>
                <td>@Model.Description</td>
            </tr>
        </table>
    </div>

    <div class="row">
        @foreach (var item in ViewBag.ImageGallery)
    {
            <div class="gallery">
                <a target="_blank" href="@item.Img_Video_Path">
                    <img src="@item.Img_Video_Path" width="300" height="200" />
                </a>
            </div>
    }
    </div>
</div>