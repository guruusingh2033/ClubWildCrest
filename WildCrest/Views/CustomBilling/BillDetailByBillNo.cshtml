<body class="fix-header card-no-border">
    <div id="main-wrapper">
        <div class="row">
            <div class="col-md-12 info_common">
                <div class="card">
                    <div class="card-block">
                        @Html.ActionLink("Go Back", "Index", "CustomBilling", new { @class = "btn btn-primary", @style = "margin-bottom:5px;" })
