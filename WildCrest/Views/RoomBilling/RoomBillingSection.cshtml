                $("#discount").val(0);
                getCustomerslistAccToDate();
            }
        }).datepicker("setDate", new Date());
        $("#CustomerDetails").css("display", "none");

        $("#discount").on("keypress keyup blur", function (event) {
            $(this).val($(this).val().replace(/[^\d].+/, ""));
